<h1>Create Account</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class= "error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %> <br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :username %> <br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :weight %> <br>
    <%= f.number_field :weight %>
  </div>
  <div class="field">
    <%= f.label :age %> <br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :password %> <br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %> <br>
    <%= f.password_field :password_confirmation %><br><br>
    <%= f.submit "Create Account" %>
  </div>
<% end %>
